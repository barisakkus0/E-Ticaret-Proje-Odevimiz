                    height: 20px;
                }

        /* Product Card Styles */
        .box_man {
            border: 1px solid #ccc;
            padding: 20px;
            margin: 10px;
            text-align: center;
            min-height: 430px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            border-radius: 8px;
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .box_man:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            }

        .cart_main {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 10px;
        }

        .left_content {
            text-align: left;
            flex: 1;
        }

        .right_content {
            text-align: right;
            margin-left: 10px;
        }

        .cart_bt a {
            background-color: #ff4d4d;
            color: white;
            padding: 6px 12px;
            font-size: 14px;
            text-decoration: none;
            border-radius: 5px;
            display: inline-block;
            margin-bottom: 5px;
            transition: background-color 0.3s;
        }

            .cart_bt a:hover {
                background-color: #ff3333;
            }

        .samsung_text {
            font-weight: bold;
        }

        .rate_text, .rate_text_1 {
            display: inline-block;
            margin-right: 5px;
        }

            .rate_text a {
                color: #ff4d4d;
                font-weight: bold;
            }

        .rate_text_1 {
            color: #999;
            text-decoration: line-through;
        }

        .like_icon {
            color: #ccc;
            font-size: 22px;
            cursor: pointer;
            transition: 0.3s;
        }

            .like_icon.liked {
                color: #ff4d4d;
            }

        .rating_stars i {
            color: #ccc;
            font-size: 20px;
            cursor: pointer;
            transition: 0.2s;
        }

            .rating_stars i.filled {
                color: gold;
            }

        .mobile_text {
            font-weight: bold;
        }

        /* Responsive Adjustments */
